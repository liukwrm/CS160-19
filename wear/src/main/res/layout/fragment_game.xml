<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="group19.cs160.scoreradar.GameFragment"
    android:orientation="horizontal"
    android:background="@drawable/watch_basketball_bg_small">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="0dp"
            android:id="@+id/team1logo"
            android:src="@drawable/los_angeles_lakers"
            android:layout_gravity="center|left"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/score1"
            android:layout_weight="2"
            android:scaleType="fitEnd"
            android:layout_marginTop="40dp" />

        <TextView android:id="@+id/score1" android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Score1"
            android:textSize="25dp"
            android:typeface="monospace"
            android:layout_gravity="right|bottom"
            android:layout_marginLeft="20dp"
            android:layout_above="@+id/time"
            android:layout_alignParentStart="true"
            android:layout_weight="2"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME"
            android:id="@+id/time"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="0dp"
            android:id="@+id/team2logo"
            android:src="@drawable/los_angeles_clippers"
            android:layout_gravity="center|left"
            android:layout_alignTop="@+id/team1logo"
            android:layout_toEndOf="@+id/time"
            android:layout_weight="2"
            android:layout_marginTop="40dp"
            android:scaleType="fitEnd" />

        <TextView
            android:id="@+id/score2"
            android:layout_width="85dp"
            android:layout_height="0dp"
            android:text="score2"
            android:textSize="25dp"
            android:typeface="monospace"
            android:layout_above="@+id/time"
            android:layout_alignParentStart="true"
            android:layout_weight="2"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>